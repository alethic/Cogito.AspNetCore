<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Jerome Haltom</Authors>
    <PackageProjectUrl>https://github.com/wasabii/Cogito.AspNetCore</PackageProjectUrl>
    <PackageIconUrl>https://cloverluxussc.blob.core.windows.net/public/cogito-nuget-icon.png</PackageIconUrl>
    <Description>Various utilities and extensions for working with Autofac and ASP.Net Core.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.8.1" />
    <PackageReference Include="Cogito.Autofac" Version="0.1.0-unstable0007" />
    <PackageReference Include="Cogito.Autofac.DependencyInjection" Version="0.1.0-unstable0007" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cogito.AspNetCore\Cogito.AspNetCore.csproj" />
  </ItemGroup>

</Project>
